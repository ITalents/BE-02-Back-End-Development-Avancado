// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id                String @id @default(auto()) @map("_id") @db.ObjectId
  name              String
  email             String  @unique
  password          String
  image             String?
  addresses         Addresses[]
  favorite_products Products[]
  createdAt         DateTime @default(now())
  orders            Orders[]
  carts             Carts[]
  admin             Boolean @default(false)
}

model Addresses {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  street      String
  number      String
  complement  String
  zipCode     String
  user_id     String @db.ObjectId
  user        Users @relation(fields: [user_id], references: [id])
  createdAt   DateTime @default(now())
}

model Products {
  id                String @id @default(auto()) @map("_id") @db.ObjectId
  name              String
  description       String
  unit_price        Int
  image             String
  barcode           String
  category_id       String @db.ObjectId
  category          Categories @relation(fields: [category_id], references: [id])
  user_id           String @db.ObjectId
  user              Users @relation(fields: [user_id], references: [id])
  createdAt         DateTime @default(now())
}

model Categories {
  id                String @id @default(auto()) @map("_id") @db.ObjectId
  name              String
  products          Products[]
  createdAt         DateTime @default(now())
}

model Orders {
  id                String @id @default(auto()) @map("_id") @db.ObjectId
  products          String[]
  final_price       Int
  freight           Int
  user_id           String @db.ObjectId
  user              Users @relation(fields: [user_id], references: [id])
  createdAt         DateTime @default(now())
}

model Carts {
  id                String @id @default(auto()) @map("_id") @db.ObjectId
  products          String[]
  final_price       Int
  freight           Int
  user_id           String @db.ObjectId
  user              Users @relation(fields: [user_id], references: [id])
  createdAt         DateTime @default(now())
}